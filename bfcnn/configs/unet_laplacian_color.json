{
	"model": {
		"backbone": {
			"input_shape": ["?", "?", 3],
			"depth": 5,
			"width": 3,
			"filters": 32,
			"kernel_size": 5,
			"encoder_kernel_size": 5,
			"kernel_initializer": "glorot_normal",
			"kernel_regularizer": "l2",
			"type": "unet_laplacian"
		},
		"denoiser": {
			"use_bias": false,
			"output_channels": 3,
			"kernel_regularizer": "l2",
			"kernel_initializer": "glorot_normal"
		}
	},
	"train": {
		"epochs": 25,
		"total_steps": -1,
		"gpu_batches_per_step": 4,
		"use_test_images": true,
		"checkpoints_to_keep": 3,
		"checkpoint_every": 10000,
		"visualization_number": 4,
		"visualization_every": 1000,
		"optimizer": {
			"type": "ADAM",
			"gradient_clipping_by_norm": 1.0,
			"schedule": {
				"type": "exponential_decay",
				"config": {
					"decay_rate": 0.9,
					"decay_steps": 40000,
					"learning_rate": 0.001
				}
			}
		}
	},
	"loss": {
		"hinge": 0.5,
		"cutoff": 255.0,
		"mae_multiplier": 1.0,
		"ssim_multiplier": 1.0,
		"regularization": 0.01
	},
	"dataset": {
		"batch_size": 8,
		"color_mode": "rgb",
		"no_crops_per_image": 1,
		"value_range": [0, 255],
		"clip_value": true,
		"random_blur": true,
		"round_values": true,
		"random_rotate": 1.57,
		"random_up_down": true,
		"random_left_right": true,
		"input_shape": [256, 256, 3],
		"multiplicative_noise": [0.05, 0.1],
		"additional_noise": [5, 10, 20, 30, 40],
		"inputs": [
			{
				"directory": "/media/data1_4tb/datasets/KITTI/data/depth/raw_image_values/"
			},
			{
				"directory": "/media/data1_4tb/datasets/COCO/train2017"
			},
			{
				"directory": "/media/data1_4tb/datasets/Megadepth/"
			},
			{
				"directory": "/media/data1_4tb/datasets/bdd_data/train/"
			},
			{
				"directory": "/media/data1_4tb/datasets/WIDER/WIDER_train/"
			},
			{
				"directory": "/media/data1_4tb/datasets/WFLW/images/"
			}
		]
	}
}